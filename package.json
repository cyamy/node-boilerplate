{
    "name": "node-boilerplate",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.ts",
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "module",
    "scripts": {
        "start": "node --experimental-loader ts-node/esm src/index.ts",
        "dev": "nodemon -x \"npm start\" -w src/**/* -e ts,json",
        "test": "vitest run",
        "test:watch": "vitest dev",
        "test:coverage": "vitest run --coverage",
        "build": "npx unbuild",
        "preview": "node build/index.mjs",
        "lint": "npx rome check src/",
        "lint:fix": "npx rome check --apply-suggested src/",
        "fmt": "npx rome format --write src/",
        "lint-staged": "lint-staged",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx}": [
            "npx rome format --write src/"
        ]
    },
    "devDependencies": {
        "@types/node": "18.15.3",
        "c8": "7.14.0",
        "husky": "8.0.3",
        "lint-staged": "13.2.0",
        "nodemon": "^2.0.21",
        "rome": "^11.0.0",
        "ts-node": "10.9.1",
        "typescript": "5.0.2",
        "unbuild": "^1.1.2",
        "vite": "^4.2.0",
        "vitest": "0.29.3"
    }
}
